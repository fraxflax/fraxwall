# ACCEPT = \
#       <in-interface>  ; <source-addr> ; <dest-addr>	; <protocol>    ; <dest-port>
[IMAC]
  ACCEPT = IINTs,IBF,IEPOS \
			; ALL		; ALL		; ALL		; ALL

[IINT]
  REJECT = IMAC		; ALL		; ALL		; ALL		; ALL

[ISMTP]
  ACCEPT = IGW		; ALL		; ALL		; tcp		; smtp # send mails via smtp.ioi.dk

[IEXT]
  ACCEPT = IMAC		; ALL		; ALL		; ALL		; ALL

# Reject all other traffic from maconomy
[ALL]
  REJECT = IMAC		; ALL		; ALL		; ALL		; ALL
