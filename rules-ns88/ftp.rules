# ACCEPT = \
#       <in-interface>  ; <source-addr> ; <dest-addr>           ; <protocol>    ; <dest-port>
[IFTP]
  ACCEPT = IINTs	; ALL		; ALL			; tcp		; ssh, rsync
  ACCEPT = ALL		; ALL		; ALL			; tcp		; ftp, 22122
  ACCEPT = ALL		; ALL		; ALL			; icmp		; icmp_allow

[IEXT]
  iptables = --table nat --insert PREROUTING --destination 88.151.47.135 --jump DNAT --to-destination 10.116.47.135
  NAT = 88.151.47.135	; 10.116.47.135 ; ALL 			; ALL 		; ALL

[IINT]
  ACCEPT = IFTP		; ALL		; hp_syscvs

[ALL]
  ACCEPT = IFTP		; ALL		; ALL			; tcp		; ident # proftpd sends ident (auth)

[ISMTP]
  ACCEPT = IFTP		; ALL		; ALL			; tcp		; smtp # send mails via smtp.ioi.dk

