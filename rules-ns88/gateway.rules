# ACCEPT = \
#       <in-interface>  ; <source-addr> ; <dest-addr>   ; <protocol>    ; <dest-port>
# Incomming
[IGW]
  REJECT = IRESTRICT	; NRESTRICT	; ALL		; ALL		; ALL # reject vpn from externals
  ACCEPT = ALL		; ALL		; ALL		; tcp		; ssh
  ACCEPT = ALL		; ALL		; ALL 		; icmp		; icmp_allow

# Outgoing
[IINTs]
  ACCEPT = IGW		; ALL		; ALL		; tcp		; ssh,vnc,rdp

[IINT]
  ACCEPT = IGW		; ALL		; ALL		; tcp		; https
  ACCEPT = IGW		; ALL		; hp_domain
  ACCEPT = IGW		; ALL		; hp_authkrb5
# Too risky to let anybody download our code to any outside machine
# ACCEPT = IGW		; ALL		; hp_cvs-pserver
# ACCEPT = IGW		; ALL		; hp_perforce
# ACCEPT = IGW		; ALL		; hp_maxlic
  ACCEPT = IGW		; ALL		; 10.118.5.8	; tcp		; ircd
  ACCEPT = IGW		; ALL		; 10.118.4.25	; tcp		; 15000	# prodg lic at cphtek01.eidos.com

[ISMTP]
  ACCEPT = IGW		; ALL		; ALL		; tcp		; smtp	# send mails via smtp.ioi.dk

[ALL] # Reject all other outgoing traffic
  REJECT = IGW		; ALL		; ALL		; ALL		; ALL
