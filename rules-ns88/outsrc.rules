# ACCEPT = \
#       <in-interface>	; <source-addr>	; <dest-addr>	; <protocol>	; <dest-port>
[IOUTSRC]
  ACCEPT = ALL		; ALL		; ALL		; tcp		; http, https
  ACCEPT = ALL 		; ALL		; ALL		; icmp		; icmp_allow
  ACCEPT = IINTs	; ALL		; ALL		; tcp		; ssh

[ISMTP]
  ACCEPT = IOUTSRC	; ALL		; ALL		; tcp		; smtp # send mails via smtp.ioi.dk
